<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App21.OrderSummaryPage">

    <ContentPage.Content>
        <StackLayout VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand">
            <Label Text="Order Summary" FontSize="Large" HorizontalOptions="CenterAndExpand" Margin="0,0,0,20" />

            <Label x:Name="OrderDetailsLabel" FontSize="Medium" HorizontalOptions="CenterAndExpand" />

            <Label x:Name="TotalPriceLabel" FontSize="Large" HorizontalOptions="CenterAndExpand" Margin="0,20,0,0" />
        </StackLayout>
    </ContentPage.Content>

</ContentPage>
